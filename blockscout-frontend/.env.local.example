# Viddhana Blockscan - Frontend Environment Variables
# Copy this file to .env.local and configure

# ============ API Configuration ============
NEXT_PUBLIC_API_HOST=localhost
NEXT_PUBLIC_API_PORT=4000
NEXT_PUBLIC_API_PROTOCOL=http
NEXT_PUBLIC_API_WEBSOCKET_PROTOCOL=ws

# ============ Network Configuration ============
NEXT_PUBLIC_NETWORK_NAME=Viddhana Blockscan
NEXT_PUBLIC_NETWORK_SHORT_NAME=Viddhana
NEXT_PUBLIC_NETWORK_ID=1337
NEXT_PUBLIC_NETWORK_RPC_URL=http://localhost:8545

# ============ Currency Configuration ============
NEXT_PUBLIC_NETWORK_CURRENCY_NAME=BTC Diamond
NEXT_PUBLIC_NETWORK_CURRENCY_SYMBOL=BTCD
NEXT_PUBLIC_NETWORK_CURRENCY_DECIMALS=18

# ============ Network Type ============
NEXT_PUBLIC_IS_TESTNET=true
NEXT_PUBLIC_HAS_BEACON_CHAIN=false
NEXT_PUBLIC_NETWORK_VERIFICATION_TYPE=validation

# ============ Homepage Configuration ============
NEXT_PUBLIC_HOMEPAGE_CHARTS=["daily_txs"]
NEXT_PUBLIC_HOMEPAGE_PLATE_BACKGROUND=linear-gradient(90deg, #4A90E2 0%, #00C6FF 100%)
NEXT_PUBLIC_HOMEPAGE_PLATE_TEXT_COLOR=rgba(255, 255, 255, 1)

# ============ Branding ============
NEXT_PUBLIC_NETWORK_LOGO=/assets/logo.svg
NEXT_PUBLIC_NETWORK_LOGO_DARK=/assets/logo-dark.svg
NEXT_PUBLIC_NETWORK_ICON=/assets/icon.svg

# ============ Features ============
NEXT_PUBLIC_VIEWS_ADDRESS_IDENTICON_TYPE=gradient_avatar
NEXT_PUBLIC_FEATURED_NETWORKS=[]

# ============ Stats API ============
NEXT_PUBLIC_STATS_API_HOST=http://localhost:4000

# ============ KYC API (Custom) ============
NEXT_PUBLIC_KYC_API_URL=http://localhost:3000

# ============ Wallet Connect (Optional) ============
# NEXT_PUBLIC_WALLET_CONNECT_PROJECT_ID=your_project_id_here

# ============ Visualize API (Optional) ============
# NEXT_PUBLIC_VISUALIZE_API_HOST=

# ============ Contract Info API (Optional) ============
# NEXT_PUBLIC_CONTRACT_INFO_API_HOST=
