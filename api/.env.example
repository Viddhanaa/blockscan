# ===========================================
# Viddhana KYC API - Environment Configuration
# ===========================================

# Server Configuration
PORT=3000
NODE_ENV=development

# -------------------------------------------
# Blockchain Configuration - HTTP RPC
# -------------------------------------------
RPC_URL=http://localhost:8545
# Unique chain ID for Viddhana network (must match genesis.json)
CHAIN_ID=47777
# KYC contract address - must be a valid 42-character hex address starting with 0x
# Deploy first using: npx hardhat run scripts/deploy.js --network viddhana
KYC_CONTRACT_ADDRESS=REPLACE_WITH_CONTRACT_ADDRESS

# -------------------------------------------
# Blockchain Configuration - WebSocket RPC
# -------------------------------------------
# WebSocket URL for real-time event subscriptions
WS_URL=ws://localhost:8546

# WebSocket reconnection settings
WS_RECONNECT_INTERVAL=5000
WS_MAX_RECONNECT_ATTEMPTS=10

# -------------------------------------------
# Admin Configuration (required for write operations)
# -------------------------------------------
# Private key for the admin account (64 hex characters with 0x prefix)
# WARNING: Never commit actual private keys to version control!
# Generate using: node -e "console.log('0x' + require('crypto').randomBytes(32).toString('hex'))"
ADMIN_PRIVATE_KEY=REPLACE_WITH_PRIVATE_KEY_NEVER_COMMIT

# -------------------------------------------
# Security
# -------------------------------------------
# Secure API key for authentication (minimum 32 characters recommended)
# Generate using: openssl rand -base64 32
API_KEY=REPLACE_WITH_SECURE_RANDOM_STRING_MIN_32_CHARS

# -------------------------------------------
# CORS Configuration
# -------------------------------------------
CORS_ORIGIN=*
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-API-Key

# -------------------------------------------
# Rate Limiting
# -------------------------------------------
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# -------------------------------------------
# Logging
# -------------------------------------------
LOG_LEVEL=info
