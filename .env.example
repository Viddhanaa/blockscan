# ===========================================
# Viddhana Blockscan - Environment Configuration
# ===========================================
# Copy this file to .env and fill in the values
# NEVER commit .env files to version control!

# -------------------------------------------
# Blockchain Network Configuration
# -------------------------------------------
# Unique chain ID for Viddhana network (must match genesis.json)
CHAIN_ID=47777
NETWORK_NAME=Viddhana Chain
NETWORK_ID=47777

# -------------------------------------------
# Signer Addresses (Clique PoA Validators)
# -------------------------------------------
# These are the addresses authorized to seal blocks
# Generate using: geth account new --datadir node1/data
SIGNER_ADDRESS_1=0x_YOUR_SIGNER_1_ADDRESS_HERE
SIGNER_ADDRESS_2=0x_YOUR_SIGNER_2_ADDRESS_HERE

# Bootnode enode URL (from node1)
# Get using: docker exec viddhana-node1 geth attach --exec "admin.nodeInfo.enode"
BOOTNODE_ENODE=enode://...

# -------------------------------------------
# Smart Contract Addresses
# -------------------------------------------
# Deployed after running: npx hardhat run scripts/deploy.js
# Must be a valid 42-character hex address starting with 0x
KYC_CONTRACT_ADDRESS=REPLACE_WITH_CONTRACT_ADDRESS

# -------------------------------------------
# Admin Configuration
# -------------------------------------------
# Private key for the admin account (64 hex characters, without 0x prefix)
# WARNING: Keep this secure! Never commit actual private keys!
# Generate using: openssl rand -hex 32
ADMIN_PRIVATE_KEY=REPLACE_WITH_PRIVATE_KEY_NEVER_COMMIT

# -------------------------------------------
# API Configuration
# -------------------------------------------
# Secure API key for authentication (minimum 32 characters recommended)
# Generate using: openssl rand -base64 32
API_KEY=REPLACE_WITH_SECURE_RANDOM_STRING_MIN_32_CHARS
API_PORT=3000
API_HOST=0.0.0.0

# -------------------------------------------
# Blockchain RPC Configuration (Internal Docker)
# -------------------------------------------
# HTTP RPC endpoint
RPC_URL=http://geth-node1:8545

# WebSocket RPC endpoint (for real-time updates)
WS_URL=ws://geth-node1:8546

# WebSocket reconnection settings
WS_RECONNECT_INTERVAL=5000
WS_MAX_RECONNECT_ATTEMPTS=10

# -------------------------------------------
# Blockscout Configuration
# -------------------------------------------
BLOCKSCOUT_HOST=localhost
BLOCKSCOUT_PORT=4000
DATABASE_URL=postgresql://blockscout:blockscout_password@postgres:5432/blockscout
# SECRET_KEY_BASE must be at least 64 characters for production security
# Generate using: openssl rand -base64 48 | tr -d '\n'
SECRET_KEY_BASE=REPLACE_WITH_64_CHAR_SECRET_RUN_OPENSSL_RAND_BASE64_48

# Blockscout JSON-RPC endpoints
ETHEREUM_JSONRPC_HTTP_URL=http://geth-node1:8545
ETHEREUM_JSONRPC_WS_URL=ws://geth-node1:8546
ETHEREUM_JSONRPC_VARIANT=geth

# -------------------------------------------
# Blockscout Frontend Configuration
# -------------------------------------------
# For local development
NEXT_PUBLIC_API_HOST=localhost
NEXT_PUBLIC_API_PORT=4000
NEXT_PUBLIC_API_PROTOCOL=http
NEXT_PUBLIC_API_WEBSOCKET_PROTOCOL=ws

# For production with SSL (uncomment and modify)
# NEXT_PUBLIC_API_HOST=scan.viddhana.com
# NEXT_PUBLIC_API_PORT=443
# NEXT_PUBLIC_API_PROTOCOL=https
# NEXT_PUBLIC_API_WEBSOCKET_PROTOCOL=wss

# Network branding
NEXT_PUBLIC_NETWORK_NAME=Viddhana
NEXT_PUBLIC_NETWORK_SHORT_NAME=Viddhana
NEXT_PUBLIC_NETWORK_ID=47777
NEXT_PUBLIC_NETWORK_CURRENCY_NAME=BTC Diamond
NEXT_PUBLIC_NETWORK_CURRENCY_SYMBOL=BTCD
NEXT_PUBLIC_NETWORK_CURRENCY_DECIMALS=18

# -------------------------------------------
# Database Configuration
# -------------------------------------------
POSTGRES_USER=blockscout
POSTGRES_PASSWORD=blockscout_password
POSTGRES_DB=blockscout

# -------------------------------------------
# Redis Configuration
# -------------------------------------------
REDIS_URL=redis://redis:6379/1
ACCOUNT_REDIS_URL=redis://redis:6379/0

# -------------------------------------------
# Logging Configuration
# -------------------------------------------
LOG_LEVEL=info
